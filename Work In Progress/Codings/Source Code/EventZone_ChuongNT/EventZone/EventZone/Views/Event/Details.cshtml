<!-- Bao phần show Các Tab chức năng -->
<div class="d_khung_nen row">
    <!-- khung nền cố định nằm ở lớp dưới, căn giữa lớp trên -->
    <div class="d_function_cover">
        <div class="d_info_container d_deco1 col-md-8">

            <!-- Nav tabs BOOTSTRAP -->
