                        </div>
                        <div class="d_des">
                            @Model.eventDescription
                            @if (Model.isOwningEvent) { 
                            @Html.ActionLink("Edit", "Edit", "Event", routeValues: new { id = @Model.eventId }, htmlAttributes: null)
                            }
                            
                        </div>
                    }
                    else
                    {
                        @Html.Partial("_EditEventPartial")
                    }
                </div>

                <!-- Khung chứa ảnh cho Gallery -->
