@model EventZone.Models.ForgotViewModel
@{
    ViewBag.Title = "Find lost Password";
}

<div class="modal fade d_modal" id="myModal3" role="dialog">
    <div class="modal-dialog" style="width: 30%; margin-top: 120px;">
        <!-- Modal content-->
        <div class="panel panel-info d_margin_top">
            <div class="panel-heading">
                <div class="panel-title">Forget Password</div>
                <div style="float:right; font-size: 80%; position: relative; top: -17px"><a href="#" data-dismiss="modal" id="i_close_modal">Close</a></div>
            </div>
            <div style="padding-top: 10px" class="panel-body">
                @using (Html.BeginForm("HandleForgotPass", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary()
                    <div class="cover_all_functions" style="text-align: -webkit-center;">
                        <p>Please enter your e-mail:</p>
                        <div style="margin-bottom: 15px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Reset" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
