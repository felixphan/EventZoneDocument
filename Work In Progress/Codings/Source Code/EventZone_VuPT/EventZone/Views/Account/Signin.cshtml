<div class="modal fade" id="myModal2" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="panel panel-info d_margin_top">
            <div class="panel-heading">
                <div class="panel-title">Welcome to Event Zone</div>
                <div style="float:right; font-size: 80%; position: relative; top: -17px"><a href="#" data-dismiss="modal" id="i_close_modal">Close</a></div>
            </div>
            <div style="padding-top:10px" class="panel-body">
                <div class="cover_all_functions">
                    <ul class="nav nav-tabs">
                        <!-- áp dụng Tab lên thanh Nút chức năng -->
                        <li class="d_signin_tab active"><a data-toggle="tab" href="#i_signin_section" id="i_signin_tab">Sign In</a></li> <!-- #sectionA là Nút đầu tiên, mặc định là hiện đầu tiên nên có Active -->
                        <li class="d_signup_tab"><a data-toggle="tab" href="#i_signup_section" id="i_signup_tab">Sign Up</a></li>    <!-- #sectionB là những nút tiếp theo -->
                    </ul>
                    <div class="tab-content">
                        <!-- Div chứa Nội dung của mỗi Tab nhé -->
                        <div id="i_signin_section" class="tab-pane fade in active">
                            <!-- bao toàn bộ chức năng SIGN IN, f_... để đánh dấu đó là Chức năng-->
                            <div class="my_function_cover f_sign_in">
                                <div style="padding-top: 30px" class="panel-body">
                                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                                    <form id="loginform" class="form-horizontal" role="form">
                                        <div style="margin-bottom: 15px" class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username or email">
                                        </div>

                                        <div style="margin-bottom: 15px" class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                            <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                                        </div>

                                        <a data-toggle="modal" href="#myModal3" id="i_quen_mk">
                                            Forget password?
                                        </a>

                                        <div class="input-group" style="margin-bottom: 35px">
                                            <div class="checkbox">
                                                <label>
                                                    <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                                </label>
                                            </div>
                                        </div>

                                        <div style="margin-top:10px" class="form-group">
                                            <!-- Button -->
                                            <div class="col-sm-12 controls">
                                                <a id="btn-login" href="#" class="btn btn-success">Sign In  </a>
                                                <a id="btn-fblogin" href="#" class="btn btn-danger">Sign In with Google+</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div><!-- bao toàn bộ chức năng SIGN IN -->
                        </div>
                        <div id="i_signup_section" class="tab-pane fade">
                            <!-- bao toàn bộ chức năng SIGN UP -->
                            <div class="my_function_cover f_sign_up">
                                <div style="padding-top:30px" class="panel-body">
                                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                                    <form id="loginform" class="form-horizontal" role="form">

                                        <div style="margin-bottom: 15px" class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                            <input id="login-username" type="text" class="form-control" name="username" placeholder="email">
                                        </div>

                                        <div style="margin-bottom: 15px" class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                            <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                                        </div>

                                        <div style="margin-bottom: 15px" class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                            <input id="d_login-re_password" type="password" class="form-control" name="password" placeholder="re-enter password">
                                        </div>

                                        <div class="d_optional_signup_cover">
                                            <div class="d_optional d_left">
                                                <div style="margin-bottom: 15px" class="input-group">
                                                    <div style="padding: 0;">
                                                        <input id="i_first_name" type="text" class="form-control" name="firstname" placeholder="First name">
                                                    </div>
                                                </div>
                                                <div style="margin-bottom: 15px" class="input-group">
                                                    <label class="radio-inline"><input type="radio" name="optradio">Male</label>
                                                    <label class="radio-inline"><input type="radio" name="optradio">Female</label>
                                                </div>
                                            </div>
                                            <div class="d_optional d_right">
                                                <div style="margin-bottom: 15px" class="input-group">
                                                    <div style="padding: 0;">
                                                        <input id="i_first_name" type="text" class="form-control" name="lastname" placeholder="Last name">
                                                    </div>
                                                </div>
                                                <div style="margin-bottom: 15px" class="input-group">
                                                    Birthday:
                                                    <input type="date" name="start" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group d_agree_policy">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" name="remember" value="1">
                                                    Tôi đã đọc và đồng ý với các
                                                    <a href="policy.html" id="i_policy"><i>Điều khoản sử dụng</i></a>.
                                                </label>
                                            </div>
                                        </div>
                                        <div style="margin-top:10px" class="form-group">
                                            <!-- Button -->
                                            <div class="col-sm-12 controls">
                                                <a id="btn-login" href="#" class="btn btn-success">Sign Up</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}