@model EventZone.Models.ChangeUserEmail
@using EventZone.Helpers
@{
    ViewBag.Title = "Find lost Password";
}

<div class="modal fade d_modal" id="change-email-modal" role="dialog">
    <div class="modal-dialog" style="margin-top: 120px; width: 30%;">
        <!-- Modal content-->
        <div class="panel panel-info d_margin_top">
            <div class="panel-heading">
                <div class="panel-title">Change Email for @UserDatabaseHelper.Instance.GetUserDisplayName(Model.UserID)</div>
                <div style="float: right; font-size: 80%; position: relative; top: -17px">
                    <a href="#" data-dismiss="modal" id="i_close_modal">Close</a>
                </div>
            </div>
            <div style="padding-top: 10px" class="panel-body">
                @using (Ajax.BeginForm("ChangeUserEmailPost", "Account", FormMethod.Post, new AjaxOptions
                {
                    HttpMethod = "POST",
                    OnSuccess = "OnChangeEmailSucess"
                }, new { id = "ChangeUserEmailForm" }))
                {
                    @Html.AntiForgeryToken()
                    <div id="ChangeEmailError"></div>
                    <div class="cover_all_functions" style="text-align: -webkit-center;">
                        <p>Enter new e-mail:</p>
                        <div style="margin-bottom: 15px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { @id="new-email",@class = "form-control", placeholder = "Email" })
                        </div>
                    </div>
                    @Html.HiddenFor(m => m.UserID, new { id="change-email-userID"})
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-success" value="Save" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Account/ForgotAccount.js"></script>