@model EventZone.Models.GoogleAccountModel
@{
    ViewBag.Title = "Register";
}
<h2>@ViewBag.Title.</h2>
<h3>Associate your Google account.</h3>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", FormMethod.Post, new {@id="ConfirmGoogleForm",@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()

    <h4>Association Form</h4>
    <hr/>
    <p class="text-info">
        You've successfully authenticated with Google.
        Please enter those information for this site below and click the Register button to finish
        logging in.
    </p>
    @Html.ValidationSummary()
    ;
    //userName
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new {@class = "form-control"})
        </div>
    </div>
    //password
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new {@id="gg-pass",@class = "form-control"})
        </div>
    </div>
    //confirm password
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new {@id="confirm-gg-pass",@class = "form-control"})
        </div>
    </div>

    //date of birth
    <div class="form-group">
        @Html.LabelFor(model => model.UserDOB, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.UserDOB,
                new
                {
                    htmlAttributes = new
                    {
                        disabled = "disabled",
                        @readonly = "readonly",
                        @Value = "1/1/1990",
                        @class = "form-control"
                    }
                })
        </div>
    </div>
    //gender
    <div class="form-group">
        @Html.LabelFor(m => m.Gender, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.RadioButtonFor(m => m.Gender, 0) Male
            @Html.RadioButtonFor(m => m.Gender, 1) Female

        </div>
    </div>
    @Html.HiddenFor(m => m.UserFirstName)
    ;
    @Html.HiddenFor(m => m.Place)
    ;
    @Html.HiddenFor(m => m.UserLastName)
    ;
    @Html.HiddenFor(m => m.Email)
    ;

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register"/>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">
        $(function() {
            $('#UserDOB').datetimepicker({
                defaultDate: '1-1-1990',
                format: 'L',
                showClose: true,
                showClear: true,
                toolbarPlacement: 'top'
            });
        });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}