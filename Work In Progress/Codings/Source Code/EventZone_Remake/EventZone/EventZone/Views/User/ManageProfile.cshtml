@using EventZone.Models;
@model EventZone.Models.EditUserModel
@{
    ViewBag.Title = "ManageProfile";
    
}
@{
    var user = Session["user"] as User;
    var task = TempData["ManageProfileTask"];
}

<center><h2>ManageProfile</h2></center>
@Html.ValidationSummary()
@Html.ActionLink("UserInfo", "UserInfo", "User", routeValues: new { id = @user.UserID }, htmlAttributes: null) |
@Html.ActionLink("Schedule", "Following", "User", routeValues : null, htmlAttributes: new {title = "Schedule"})
@if(task=="UserInfo"){
@Html.Partial("_UserInfoPartial");
}else if(task=="EditProfile"){
    @Html.Partial("_EditProfilePartial", Model);
}