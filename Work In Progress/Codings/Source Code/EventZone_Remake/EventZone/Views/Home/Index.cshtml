<script>
    //handle follow event
    function followEvent(eventID) {
        @if(user!=null){
            <text>
        $.ajax({
            url: "/User/FollowEvent",
            type: "POST",
            dataType: "json",
            data: {
                eventID: eventID
            },
            success: function (data) {
                if (data.success) {
                    if (data.state == 0) {
                        $(".follow-" + eventID + "-status").text("Follow");
                    } else if (data.state == 1) {
                        $(".follow-" + eventID + "-status").text("Followed");
                    }
                } else {
