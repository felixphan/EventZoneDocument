@model EventZone.Models.EditUserModel

@{
    if (EventZone.Helpers.UserHelpers.GetCurrentUser(Session) == null)
    {
        Response.Redirect("~/Home");
    }
    string date="0001-1-1";
    if(Model.UserDOB!=null){
        date = Model.UserDOB.Year + "-" + Model.UserDOB.Month + "-" + Model.UserDOB.Date;
        
    }
    
}

    @using (Html.BeginForm("UpdateInfoPost", "User"))
    {
        @Html.AntiForgeryToken()
        var alertStyle = "";

        if (ViewData.ModelState == null || !ViewData.ModelState.Any(m => m.Value.Errors.Any()))
        {
            alertStyle = "display:none;margin-bottom:0px";
        }
        <div id='alertPanelChangePassword'
             class="alert alert-danger"
             style='@alertStyle'>
        </div>
        <div class="my_function_cover ">
            <div class="panel-body">
                <div class="row b">

                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 b">
                        <hr>
                    </div>
                </div>
                <div class="row b">
                    <!-- row FirstName -->
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 b d_label">
                        First Name:
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 b">
                        @Html.TextBoxFor(modal => modal.UserFirstName) @Html.ValidationMessageFor(model => model.UserFirstName)
                    </div>
                </div>
                <div class="row b">
                    <!-- row LastName -->
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 b d_label">
                        Last Name:
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 b">
                       @Html.TextBoxFor(modal => modal.UserLastName)  @Html.ValidationMessageFor(model => model.UserLastName)
                    </div>
                </div>
                <div class="row b">
                    <!-- row DOB -->
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 b d_label">
                        Birthday:
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 b">
                        @Html.TextBoxFor(model => model.UserDOB, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @style = "border-radius:4px" })
                    </div>
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 b d_label">
                        
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 b">
                        @Html.ValidationMessageFor(model => model.UserDOB)
                    </div>
                </div>
                <div class="row b">
                    <!-- row Address -->
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 b d_label">
                        Address:
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 b">
                        
                    </div>
                </div>
                <div class="row b">

                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 b d_label">
                        Gender:
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 b">
                        <label class="radio-inline">@Html.RadioButtonFor(m => m.Gender, 0) Male</label>
                        <label class="radio-inline">@Html.RadioButtonFor(m => m.Gender, 1) Female</label>
                        @Html.ValidationMessageFor(model => model.Gender)
                    </div>
                </div>
                <div class="row b">
                    <!-- row Phone Number -->
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 b d_label">
                        Phone Number:
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 b">
                        @Html.TextBoxFor(model=>model.Phone) @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>
                <div class="row b">
                    <!-- row ID card -->
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 b d_label">
                        ID card:
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 b">
                        @Html.TextBoxFor(model => model.IDCard) @Html.ValidationMessageFor(model => model.IDCard)
                    </div>
                </div>
                <div class="row b">
                    <!-- row Update Button -->
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 b d_label">
                    </div>
                    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 b">
                        <button type="submit" class="btn btn-primary btn-sm" id="btn-save">Save</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- bao toàn bộ chức năng Change Password -->
    }



